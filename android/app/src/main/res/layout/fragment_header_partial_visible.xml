<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_dark">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/lr_refresh_header_behavior"
            android:src="@mipmap/photo3"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:lr_headerMode="follow"
            app:lr_visibleHeightRatio="80%"
            app:lr_maxOffsetRatio="120%p"/>

        <FrameLayout
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lr_minOffset="-10dp"
            app:layout_behavior="@string/lr_refresh_content_behavior">

            <fragment
                android:id="@+id/fragment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.androidpi.app.fragment.UnsplashPhotoListFragment"/>

        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/colorAccent"
            app:layout_behavior="@string/lr_refresh_footer_behavior" />
    </android.support.design.widget.CoordinatorLayout>
</layout>
