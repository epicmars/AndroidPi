<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OffsetBehavior">
        <attr name="lr_maxOffset" format="reference|dimension"/>
        <attr name="lr_maxOffsetRatio" format="reference|fraction"/>
        <attr name="lr_visibleHeight" format="reference|dimension"/>
        <attr name="lr_visibleHeightRatio" format="reference|fraction"/>
        <attr name="lr_triggerRange" format="reference|dimension"/>
        <attr name="lr_showUpWhenRefresh" format="reference|boolean"/>
    </declare-styleable>

    <declare-styleable name="IndicatorBehavior">
        <attr name="lr_mode" format="enum">
            <enum name="follow" value="0"/>
            <enum name="still" value="1"/>
            <enum name="follow_down" value="2"/>
            <enum name="follow_up" value="3"/>
        </attr>
    </declare-styleable>
    
    <declare-styleable name="ContentBehavior">
        <attr name="lr_headerVisibleHeight" format="reference|dimension"/>
        <attr name="lr_minOffset" format="reference|dimension"/>
        <attr name="lr_minOffsetRatio" format="reference|fraction"/>
    </declare-styleable>
    
    <declare-styleable name="LoadingView">
        <attr name="lr_color" format="reference|color"/>
    </declare-styleable>
</resources>