<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OffsetBehavior">
        <attr name="lr_maxOffset" format="reference|dimension"/>
        <attr name="lr_maxOffsetRatio" format="reference|float"/>
        <attr name="lr_visibleHeight" format="reference|dimension"/>
        <attr name="lr_visibleHeightRatio" format="reference|float"/>
    </declare-styleable>

    <declare-styleable name="HeaderBehavior">
        <attr name="lr_headerMode" format="enum">
            <enum name="still" value="0"/>
            <enum name="follow" value="1"/>
            <enum name="follow_down" value="2"/>
        </attr>
    </declare-styleable>
    
    <declare-styleable name="ContentBehavior">
        <attr name="lr_minOffset" format="reference|dimension"/>
        <attr name="lr_minOffsetRatio" format="reference|float"/>
        <attr name="lr_useDefaultMinOffset" format="reference|boolean"/>
    </declare-styleable>
    
    <declare-styleable name="LoadingView">
        <attr name="lr_color" format="reference|color"/>
    </declare-styleable>
</resources>